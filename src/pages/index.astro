---
import { playlists } from "@/lib/data";
import Layout from "../layouts/Layout.astro";
import Greetings from "@/components/svelte/Greetings.svelte";
import PlaylistItemCard from "@/components/PlaylistItemCard.astro";
import PlaylistItemHeader from "@/components/PlaylistItemHeader.astro";
import ArrowLeft from "@/icons/ArrowLeft.astro";
import ArrowRight from "@/icons/ArrowRight.astro";
---

<Layout title="Spotify clone">
  <div
    id="playlist-container"
    class="relative transition-all duration-1000 bg-green-500"
  >
    <!-- <PageHeader/> -->
    <div class="relative z-10 px-6 pt-10">
      <Greetings />
      <div
        class="grid player:grid-cols-3 lg:grid-cols-4 grid-cols-2 gap-2 place-content-center my-6"
      >
        {
          playlists.map((playlist) => (
            <PlaylistItemHeader playlist={playlist} />
          ))
        }
      </div>
      <h2 class="font-bold text-3xl mt-10">Escuchado recientemente</h2>
      <div
        class="grid grid-flow-col gap-2 overflow-x-auto snap-inline player:flex player:flex-wrap mt-6"
      >
        {playlists.map((playlist) => <PlaylistItemCard playlist={playlist} />)}
      </div>
    </div>
    <div
      class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80"
    >
    </div>
  </div>
</Layout>
