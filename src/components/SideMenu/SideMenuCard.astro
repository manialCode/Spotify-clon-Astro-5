---
import type { Playlist } from "@/lib/data.ts";
import { TitleCard } from "@/components/utils/TitleCard";
interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, artists, cover, title, albumId } = playlist;
const artistsString = artists.join(" â€¢ ");
---

<a
  href={`/playlist/${id}`}
  class="playlist-item flex relative p-2 overflow-hidden items-center gap-2 rounded-md hover:bg-zinc-800"
>
  <picture class="h-12 w-12 flex-none">
    <img
      src={cover}
      alt={`Cover of ${title} by ${artistsString}`}
      class="object-cover w-full h-full rounded-md"
      loading="lazy"
    />
  </picture>

  <div class="flex flex-auto flex-col truncate">
    <TitleCard albumId={albumId} title={title} client:load />
    <span class="text-xs text-gray-400">
      {artistsString}
    </span>
  </div>
</a>
