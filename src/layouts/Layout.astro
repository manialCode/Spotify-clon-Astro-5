---
import { ClientRouter } from "astro:transitions";
import SideMenu from "@/components/SideMenu/SideMenu.astro";
import { Player } from "../components/Player/Player.jsx";
import { MobileCard } from "@/components/mobile/MobileCard";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter fallback="none" />
  </head>
  <body>
    <div id="app" class="relative p-2 gap-2">
      <aside
        class="[grid-area:aside] player:z-10 flex-col flex overflow-y-auto"
      >
        <SideMenu />
      </aside>

      <main class="[grid-area:main] rounded-lg bg-zinc-900 overflow-y-auto">
        <slot />
      </main>

      <footer class="[grid-area:player] h-[72px]">
        <!-- 
        Client:load - carga el componente una vez visible para el usuario
        transition:persist - Mantiene el estado a traves de las pÃ¡ginas
         -->
        <div id="Player-container" class="player:inline hidden">
          <Player
            client:load
            transition:name="media-player"
            transition:persist
          />
        </div>
        <div id="MobileCardPlayer" class="player:hidden inline">
          <MobileCard
            client:only="react"
            transition:name="mobile-media-player"
            transition:persist
          />
        </div>
      </footer>
    </div>
  </body>
</html>

<style>
  #app {
    /* grid area para definir layout de la interfaz */
    display: grid;
    grid-template-areas:
      "aside main main"
      "player player player";
    grid-template-columns: clamp(350px, auto) 1fr;
    grid-template-rows: 1fr auto;
    height: 100svh;
  }

  html {
    font-family: "CircularStd", system-ui, sans-serif;
    background-color: #010101;
    color: #fff;
  }

  @media (max-width: 50em) {
    #app {
      grid-template-areas:
        " main "
        " player "
        "aside ";
    }
  }

  @font-face {
    font-family: "CircularStd";
    src: url("/fonts/CircularStd-Medium.woff2") format("woff2");
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "CircularStd";
    src: url("/fonts/CircularStd-Book.woff2") format("woff2");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "CircularStd";
    src: url("/fonts/CircularStd-Light.woff2") format("woff2");
    font-weight: 300;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "CircularStd";
    src: url("/fonts/CircularStd-Bold.woff2") format("woff2");
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "CircularStd";
    src: url("/fonts/CircularStd-Black.woff2") format("woff2");
    font-weight: 900;
    font-style: normal;
    font-display: swap;
  }

  /* Estilos para la barra de desplazamiento */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background-color: rgba(255, 255, 255, 0.5);
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background-color: rgba(255, 255, 255, 0.7);
  }
</style>
